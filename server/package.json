{
  "name": "animex-server",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Back-end source code for Animex, a free anime streaming website made with React, SASS,GraphQL, and TypeScript.",
  "main": "./dist/index.js",
  "scripts": {
    "full-dev": "concurrently \"npm:dev\" \"cd ../client && npm run dev\"",
    "dev": "concurrently \"cd ./src && npx tsc --watch\" \"cd ./dist && npx nodemon index.js",
    "build": "cd ./../client && npm run build && cd ./../server && npx tsc",
    "start": "cd ./dist && node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohitman47/animex-server.git"
  },
  "keywords": [
    "anime",
    "streaming",
    "typescript",
    "graphql",
    "api"
  ],
  "author": "rohitman47",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rohitman47/animex-server/issues"
  },
  "homepage": "https://github.com/rohitman47/animex-server#readme",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "graphql": "^16.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.0",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.18",
    "typescript": "^4.7.4"
  }
}
